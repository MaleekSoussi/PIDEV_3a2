<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="800.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddEventFrontController">
    <top>
        <HBox styleClass="header" spacing="10" alignment="CENTER_LEFT" stylesheets="@styles.css">
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/logo.png" />
                </image>
            </ImageView>
            <!-- Navigation Buttons -->
            <Button text="Art Works" styleClass="transparent" textFill="#878787">
                <font>
                    <Font name="Cambria Bold" size="19.0" />
                </font>
                <HBox.margin>
                    <Insets right="50.0" />
                </HBox.margin>
            </Button>
            <Button text="Auction" styleClass="transparent" textFill="#878787">
                <font>
                    <Font name="Cambria Bold" size="19.0" />
                </font>
                <HBox.margin>
                    <Insets right="50.0" />
                </HBox.margin>
            </Button>
            <Button text="Courses" styleClass="transparent" textFill="#878787">
                <font>
                    <Font name="Cambria Bold" size="19.0" />
                </font>
                <HBox.margin>
                    <Insets right="50.0" />
                </HBox.margin>
            </Button>
            <Button text="Event" styleClass="transparent" textFill="#878787">
                <font>
                    <Font name="Cambria Bold" size="19.0" />
                </font>
                <HBox.margin>
                    <Insets right="50.0" />
                </HBox.margin>
            </Button>
            <Button text="Home" styleClass="transparent" textFill="#878787">
                <font>
                    <Font name="Cambria Bold" size="19.0" />
                </font>
                <HBox.margin>
                    <Insets right="50.0" />
                </HBox.margin>
            </Button>
            <Button text="About Us" styleClass="transparent" textFill="#878787">
                <font>
                    <Font name="Cambria Bold" size="19.0" />
                </font>
                <HBox.margin>
                    <Insets right="50.0" />
                </HBox.margin>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button styleClass="transparent">
                <graphic>
                    <ImageView fitHeight="49.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@images/cart.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true">
            <VBox fx:id="eventsVBox" spacing="10" alignment="TOP_CENTER">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <VBox alignment="CENTER" fillWidth="false"> <!-- VBox for vertical centering -->
                    <Region VBox.vgrow="ALWAYS" /> <!-- Spacer at the top -->
                    <HBox alignment="CENTER"> <!-- HBox for horizontal centering -->
                        <Region HBox.hgrow="ALWAYS" /> <!-- Spacer on the left -->
                        <VBox fx:id="chosenFruitCard" alignment="CENTER" prefHeight="535.0" prefWidth="353.0" styleClass="free-delivery-card" stylesheets="@styles.css">
                            <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding:  20;">
                                <TextField fx:id="eventNameTextField" alignment="CENTER" prefHeight="50.0" prefWidth="350.0" promptText="type here Event Name" styleClass="search-box" stylesheets="@styles.css">
                                    <font>
                                        <Font name="Cambria" size="18.0" />
                                    </font>
                                </TextField>
                                <TextField fx:id="eventDateTextField" alignment="CENTER" prefHeight="50.0" prefWidth="350.0" promptText="type here Event Date (YYYY-MM-DD)" styleClass="search-box" stylesheets="@styles.css">
                                    <font>
                                        <Font name="Cambria" size="18.0" />
                                    </font>
                                </TextField>
                                <TextField fx:id="eventDurationTextField" alignment="CENTER" prefHeight="50.0" prefWidth="350.0" promptText="type here Event Duration" styleClass="search-box" stylesheets="@styles.css">
                                    <font>
                                        <Font name="Cambria" size="18.0" />
                                    </font>
                                </TextField>
                                <TextField fx:id="eventTypeTextField" alignment="CENTER" prefHeight="50.0" prefWidth="350.0" promptText="type here Event Type" styleClass="search-box" stylesheets="@styles.css">
                                    <font>
                                        <Font name="Cambria" size="18.0" />
                                    </font>
                                </TextField>
                                <TextField fx:id="entryFeeTextField" alignment="CENTER" prefHeight="50.0" prefWidth="350.0" promptText="type here Event Entry Fee" styleClass="search-box" stylesheets="@styles.css">
                                    <font>
                                        <Font name="Cambria" size="18.0" />
                                    </font>
                                </TextField>
                                <TextField fx:id="capacityTextField" alignment="CENTER" prefHeight="50.0" prefWidth="350.0" promptText="type here Event Capacity" styleClass="search-box" stylesheets="@styles.css">
                                    <font>
                                        <Font name="Cambria" size="18.0" />
                                    </font>
                                </TextField>
                            </VBox>
                            <Region HBox.hgrow="ALWAYS" /> <!-- Spacer on the right -->
                        </VBox>
                        <VBox spacing="15" alignment="CENTER" style="-fx-padding:  20;">
                            <VBox spacing="10" alignment="CENTER">
                                <Button fx:id="insertImageButton" text="Insert Event Image" onAction="#insertEventImage" style="-fx-background-color: #C9A43D;" styleClass="shopping-online-card" stylesheets="@styles.css" prefWidth="120.0" prefHeight="50.0" textFill="#ffffff"/>
                                <Button fx:id="createEventButton" text="Create Event" onAction="#createEvent" style="-fx-background-color: #C9A43D;" styleClass="shopping-online-card" stylesheets="@styles.css" prefWidth="120.0" prefHeight="50.0" textFill="#ffffff"/>
                                <Button fx:id="updateButton" text="Update Event" onAction="#updateEvent" style="-fx-background-color: #C9A43D;" styleClass="shopping-online-card" stylesheets="@styles.css" prefWidth="120.0" prefHeight="50.0" textFill="#ffffff"/>
                                <Button fx:id="deleteButton" text="Delete Event" onAction="#deleteEvent" style="-fx-background-color: #C9A43D;" styleClass="shopping-online-card" stylesheets="@styles.css" prefWidth="120.0" prefHeight="50.0" textFill="#ffffff"/>
                            </VBox>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" /> <!-- Spacer on the right -->
                    </HBox>
                    <Region VBox.vgrow="ALWAYS" /> <!-- Spacer at the bottom -->
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
