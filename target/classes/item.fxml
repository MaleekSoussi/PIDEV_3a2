<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="itemC" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="760.0" spacing="5" style="-fx-background-color: #1f1f17; -fx-background-radius: 5; -fx-background-insets: 0;" stylesheets="@styles/styleitem.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UserItemController">
    <children>
      <ImageView fitHeight="30.0" fitWidth="131.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@styles/thumbnail_2 copy.png" />
         </image>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </ImageView>
      <Label fx:id="firstname" text="firstname" textFill="#FFFFFF" />
      <Label fx:id="lastname" text="lastname" textFill="#FFFFFF">
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </Label>
      <Label fx:id="email" text="email" textFill="#FFFFFF">
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </Label>
      <Label fx:id="role" text="role" textFill="#FFFFFF">
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </Label>

      <Label fx:id="status" text="status" textFill="#FFFFFF" />
      <Label fx:id="lastlogin" prefHeight="17.0" prefWidth="51.0" text="last login" textFill="#FFFFFF" />
      <Label fx:id="datecreated" prefHeight="17.0" prefWidth="85.0" text="date created" textFill="#ffffff" />
      <Button fx:id="deletebutton" mnemonicParsing="false" prefHeight="10.0" prefWidth="60.0" style="-fx-border-color: #ffd721; -fx-border-radius: 20; -fx-background-color: transparent;" stylesheets="@styles/styleitem.css" text="delete">
         <HBox.margin>
             <Insets bottom="5" left="5" right="5" top="5" />
         </HBox.margin>
      </Button>
      <Button fx:id="updatebutton" mnemonicParsing="false" prefHeight="10.0" prefWidth="60.0" style="-fx-border-color: #ffd721; -fx-border-radius: 20; -fx-background-color: transparent;" stylesheets="@styles/styleitem.css" text="update" />
   </children>
    <effect>
        <DropShadow blurType="GAUSSIAN" color="#444444" radius="5.0" spread="0.2" />
    </effect>
</HBox>
